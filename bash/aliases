# BASH
alias ls='ls -p'
alias la='ls -a'
alias ll='ls -al'

# Vim
alias nerd='vim -c NERDTree'
alias mnerd='mvim -c NERDTree'

alias grep='grep --color -n'

# Bashrc
alias rbash='source ~/.bash_profile'
alias edit_bashrc='$EDITOR ~/.bashrc;source ~/.bash_profile'

# Phil
alias cls='clear'

# random
alias where='type -a'
alias re_cd='cd .. ; cd -'

# Git
alias gitrm='git st | awk '\''/deleted/ {print $3}'\'' | xargs git rm'
alias git-rm=gitrm
alias grm=gitrm

# Bash
alias ls='ls -p'
alias la='ls -a'
alias ll='ls -al'
alias rbash='. ~/.bash_profile'
alias edit_bashrc='$EDITOR ~/.bashrc; source ~/.bashrc'

alias grep='grep --color'

# Random
alias tname='tName'

# Screen
alias screen='TERM=screen screen'

# VIM
alias vim='/Applications/MacVim.app/Contents/MacOS/Vim'
alias mnerd='mvim -c NERDTree'
alias nerd='vim -c NERDTree'

# fun git commands
alias glo='git log --oneline'
alias glg='git log --pretty=oneline'

alias gst='git st'
alias gb='git branch'

# postgres
alias start-pg='/usr/local/bin/pg_ctl -D /usr/local/var/postgres -l /usr/local/var/postgres/server.log start'
alias stop-pg='/usr/local/bin/pg_ctl -D /usr/local/var/postgres stop -s -m fast'

# mongo
alias start-mongo='mongod run --config /usr/local/etc/mongod.conf --fork --pidfilepath=/usr/local/var/mongo/mongo.pid --logpath=/usr/local/var/mongo/mongo.log'
alias stop-mongo='cat /usr/local/var/mongo/mongo.pid | xargs kill -9 && rm /usr/local/var/mongo/mongo.pid'

# redis
alias start-redis='redis-server /usr/local/etc/redis.conf'

# solr
alias start-solr='rake sunspot:solr:start'
alias stop-solr='rake sunspot:solr:stop'

# projects
alias giggity='cd /src/bitbucket/gigfunder && tname gigfunder'

alias tc='cd /src/trunkclub; ll'
alias tc-dia='cd /src/trunkclub/diablo && tname diablo'
alias tc-fut='cd /src/trunkclub/futura && tname futura'
alias tc-her='cd /src/trunkclub/hermes && tname hermes'
alias tc-bob='cd /src/trunkclub/bobby_flay && tname bobby_flay'
alias tc-min='cd /src/trunkclub/minotaur && tname mintoaur'
alias tc-clo='cd /src/trunkclub/closet && tname closet'
alias tc-moby='cd /src/trunkclub/moby && tname moby'
alias tc-con='cd /src/trunkclub/continuity && tname continuity'
alias tc-gram='cd /src/trunkclub/gramophone && tname gramophone'
alias tc-pink='cd /src/trunkclub/pinky && tname pinky'
alias tc-gem='cd /src/trunkclub/gemini && tname gemini'
alias start-tc='start-mongo ; start-pg ; start-solr ; start-redis'
alias stop-tc='stop-solr ; stop-mongo ; stop-pg'

# Start Chrome allowing for Cross Domain Requests
alias dev-chrome='/Applications/Google\ Chrome.app/Contents/MacOS/Google\ Chrome --disable-web-security'

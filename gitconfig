[alias]
  st = status
  ci = commit
  br = branch
  co = checkout
  df = diff
  di = diff
  lg = log --graph --pretty=format:'%Cred%h%Creset %cN -%C(yellow)%d%Creset %s %Cgreen(%cr)%Creset' --abbrev-commit --date=relative
  lgg = log -p
  last = log -1 HEAD
  who = shortlog -s --
  grep = grep --color
  diff = diff --color
  dic = diff --cached
  grep = grep -n --color
[branch]
  autosetupmerge = always
